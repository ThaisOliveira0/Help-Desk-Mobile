<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FC">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#A8B5E0"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnVoltar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="#FFFFFF"
            android:contentDescription="Voltar" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvHeaderTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Responder Chamado"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Detalhes do Chamado"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardChamado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvIdChamado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 124"
                android:textSize="16sp"
                android:textColor="#333"/>

            <TextView
                android:id="@+id/tvNomeUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuário: Maria Silva"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoria: Problema técnico"
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvDescricaoTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvDescricaoChamado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aqui vai a descrição completa do chamado..."
                android:textSize="15sp"
                android:textColor="#555"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvResponderTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Responder chamado"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardChamado"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edtResposta"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:hint="Digite a resposta do chamado..."
        android:gravity="top"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/edittext_bg"
        android:textColor="#333"
        android:textSize="15sp"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/tvResponderTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnEnviarResposta"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Enviar resposta"
        android:textStyle="bold"
        android:backgroundTint="#6C8CC6"
        android:textColor="#FFF"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/edtResposta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
