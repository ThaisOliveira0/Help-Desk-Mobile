<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_conversa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/card_background"
    android:elevation="2dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_status_chat"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_status_dot"
        app:tint="#FFC107"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_nome_conversa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chamado #12345"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/txt_ultima_mensagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agente: Sim, claro. Vou verificar o que..."
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

</LinearLayout>
